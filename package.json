{
  "name": "waviz",
  "version": "1.0.0-beta.4.1",
  "type": "module",
  "description": "Modern, modular React library for audio and signal visualization.",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    },
    "./core": {
      "import": "./dist/esm/indexCore.js",
      "require": "./dist/indexCore.js"
    }
  },
  "directories": {
    "doc": "doc",
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json",
    "build:umd": "rollup -c rollup.config.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run build:umd",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "vite --host",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Waviz-Team/Waviz.git"
  },
  "keywords": [
    "audio",
    "visualization",
    "react",
    "web audio API",
    "canvas"
  ],
  "author": {
    "name": "Waviz Team"
  },
  "contributors": [
    {
      "name": "Seung-Taek Oh",
      "email": "seungtaekoh5@gmail.com"
    },
    {
      "name": "Joao Morgado",
      "email": "jmrmorgado@gmail.com"
    },
    {
      "name": "Cate Profir",
      "email": "cate.profir@gmail.com"
    },
    {
      "name": "Victor Sangmu Kim",
      "email": "Sangmu.kim@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OSP1-CSVJ/Waviz/issues"
  },
  "homepage": "https://github.com/OSP1-CSVJ/Waviz#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.4",
    "@eslint/js": "^9.32.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^4.46.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.3"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
